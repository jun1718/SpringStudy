package com.spring.basicReview.ex02;

import org.springframework.context.support.GenericXmlApplicationContext;

public class MainClass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		GenericXmlApplicationContext ct = 
				new GenericXmlApplicationContext("classpath:db-config.xml");
		
		DataBaseInfo dbInfo = ct.getBean("db1", DataBaseInfo.class);
		

		System.out.println("URL : " + dbInfo.getUrl());
		System.out.println("UID : " + dbInfo.getUid());
		System.out.println("UPW : " + dbInfo.getUpw());

		//위처럼 하지말고 설정으로 해보자
		
		
		DataBaseInfo dbInfo2 = ct.getBean("db2", DataBaseInfo.class);
		System.out.println("URL : " + dbInfo2.getUrl());
		System.out.println("UID : " + dbInfo2.getUid());
		System.out.println("UPW : " + dbInfo2.getUpw());
	}
}